<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/smartapprating_white_dimmed_background"
  android:paddingEnd="20dip"
  android:paddingLeft="20dip"
  android:paddingRight="20dip"
  android:paddingStart="20dip"
  tools:ignore="MissingPrefix"
>
  <android.support.constraint.ConstraintLayout
    android:id="@+id/rateMainView"
    tools:visibility="visible"
    style="@style/smartapprating_CardStyle">

    <TextView
      android:id="@+id/title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@drawable/smartapprating_blue_gradient"
      android:gravity="center"
      android:padding="15dp"
      android:textColor="@color/smartapprating_white"
      android:textSize="22sp"
      app:layout_constrainedHeight="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@tools:sample/lorem"
    />

    <TextView
      android:id="@+id/paragraph"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginEnd="10dip"
      android:layout_marginLeft="10dip"
      android:layout_marginRight="10dip"
      android:layout_marginStart="10dip"
      android:layout_marginTop="20dip"
      android:gravity="center_horizontal"
      android:padding="10dip"
      android:textColor="@color/smartapprating_very_dark_gray"
      android:textSize="15sp"
      app:layout_constrainedHeight="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title"
      tools:text="@tools:sample/lorem"
    />

    <com.willy.ratingbar.ScaleRatingBar
      android:id="@+id/rateBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dip"
      android:theme="@style/smartapprating_RatingBar"
      app:layout_constrainedHeight="true"
      app:layout_constrainedWidth="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/paragraph"
      app:srb_drawableEmpty="@drawable/ic_star_empty"
      app:srb_drawableFilled="@drawable/ic_star_full"
      app:srb_stepSize="1.0"
    />

    <TextView
      android:id="@+id/later"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="10dip"
      android:layout_marginTop="0dip"
      android:background="@drawable/smartapprating_white_button_background"
      android:gravity="center_horizontal"
      android:padding="15dip"
      android:textColor="@color/smartapprating_very_dark_gray"
      app:layout_constrainedHeight="true"
      app:layout_constrainedWidth="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/rateBar"
      tools:text="@tools:sample/lorem"
    />
  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/rateDislikeView"
    android:scaleX="0"
    android:scaleY="0"
    android:visibility="invisible"
    tools:visibility="visible"
    style="@style/smartapprating_CardStyle"
  >

    <TextView
      android:id="@+id/dislikeTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@drawable/smartapprating_blue_gradient"
      android:gravity="center"
      android:padding="15dp"
      android:textColor="@color/smartapprating_white"
      android:textSize="22sp"
      app:layout_constrainedHeight="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@tools:sample/lorem"
    />

    <TextView
      android:id="@+id/dislikeParagraph"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginEnd="10dip"
      android:layout_marginLeft="10dip"
      android:layout_marginRight="10dip"
      android:layout_marginStart="10dip"
      android:layout_marginTop="20dip"
      android:gravity="center_horizontal"
      android:padding="10dip"
      android:textColor="@color/smartapprating_very_dark_gray"
      android:textSize="15sp"
      app:layout_constrainedHeight="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/dislikeTitle"
      tools:text="@tools:sample/lorem"
    />

    <TextView
      android:id="@+id/dislikeActionButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="20dip"
      android:layout_marginEnd="20dip"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginStart="20dip"
      android:layout_marginTop="20dp"
      android:background="@drawable/smartapprating_blue_rnd_btn"
      android:gravity="center_horizontal"
      android:paddingBottom="15dip"
      android:paddingEnd="70dp"
      android:paddingLeft="70dp"
      android:paddingRight="70dp"
      android:paddingStart="70dp"
      android:paddingTop="15dip"
      android:textColor="@color/smartapprating_white"
      android:textSize="18sp"
      app:layout_constrainedHeight="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/dislikeParagraph"
      tools:text="@tools:sample/lorem"
    />

    <TextView
      android:id="@+id/dislikeExitButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="10dip"
      android:layout_marginTop="20dip"
      android:background="@drawable/smartapprating_white_button_background"
      android:gravity="center_horizontal"
      android:padding="15dip"
      android:textColor="@color/smartapprating_very_dark_gray"
      app:layout_constrainedHeight="true"
      app:layout_constrainedWidth="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/dislikeActionButton"
      tools:text="@tools:sample/lorem"
    />

  </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
