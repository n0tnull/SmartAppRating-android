<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white_semi_translucide"
  tools:ignore="MissingPrefix"
>
  <android.support.constraint.ConstraintLayout
    android:id="@+id/rateMainView"
    tools:visibility="invisible"
    style="@style/RateCardStyle">

    <TextView
      android:id="@+id/title"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_gravity="center"
      android:background="@drawable/blue_gradient"
      android:gravity="center"
      android:padding="15dp"
      android:textColor="@color/white"
      android:textSize="22sp"
      app:layout_constraintHeight_default="wrap"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@string/app_name"
    />

    <TextView
      android:id="@+id/paragraph"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginEnd="10dip"
      android:layout_marginLeft="10dip"
      android:layout_marginRight="10dip"
      android:layout_marginStart="10dip"
      android:layout_marginTop="20dip"
      android:gravity="center_horizontal"
      android:padding="10dip"
      android:textColor="@color/very_dark_gray"
      android:textSize="15sp"
      app:layout_constraintHeight_default="wrap"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title"
      tools:text="@string/app_name"
    />

    <RatingBar
      android:id="@+id/rateBar"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="20dip"
      android:numStars="5"
      android:theme="@style/RatingBar"
      app:layout_constraintHeight_default="wrap"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/paragraph"
      app:layout_constraintWidth_default="wrap"
      tools:rating="3"
    />

    <TextView
      android:id="@+id/later"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="10dip"
      android:layout_marginTop="20dip"
      android:background="@drawable/white_button_background"
      android:gravity="center_horizontal"
      android:padding="15dip"
      android:textColor="@color/very_dark_gray"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHeight_default="wrap"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/rateBar"
      app:layout_constraintWidth_default="wrap"
      tools:text="@string/app_name"
    />
  </android.support.constraint.ConstraintLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/rateDislikeView"
    style="@style/RateCardStyle"
    android:visibility="invisible"
    tools:visibility="visible"
    android:scaleX="0"
    android:scaleY="0"
  >

    <TextView
      android:id="@+id/dislikeTitle"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_gravity="center"
      android:background="@drawable/blue_gradient"
      android:gravity="center"
      android:padding="15dp"
      android:textColor="@color/white"
      android:textSize="22sp"
      app:layout_constraintHeight_default="wrap"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@string/app_name"
    />

    <TextView
      android:id="@+id/dislikeParagraph"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginEnd="10dip"
      android:layout_marginLeft="10dip"
      android:layout_marginRight="10dip"
      android:layout_marginStart="10dip"
      android:layout_marginTop="20dip"
      android:gravity="center_horizontal"
      android:padding="10dip"
      android:textColor="@color/very_dark_gray"
      android:textSize="15sp"
      app:layout_constraintHeight_default="wrap"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/dislikeTitle"
      tools:text="@string/app_name"
    />

    <TextView
      android:id="@+id/dislikeActionButton"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="20dip"
      android:layout_marginEnd="20dip"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginStart="20dip"
      android:layout_marginTop="20dp"
      android:background="@drawable/blue_rnd_btn"
      android:gravity="center_horizontal"
      android:paddingBottom="15dip"
      android:paddingEnd="70dp"
      android:paddingLeft="70dp"
      android:paddingRight="70dp"
      android:paddingStart="70dp"
      android:paddingTop="15dip"
      android:textColor="@color/white"
      android:textSize="18sp"
      app:layout_constraintHeight_default="wrap"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/dislikeParagraph"
      tools:text="@string/app_name"
    />

    <TextView
      android:id="@+id/dislikeExitButton"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="10dip"
      android:layout_marginTop="20dip"
      android:background="@drawable/white_button_background"
      android:gravity="center_horizontal"
      android:padding="15dip"
      android:textColor="@color/very_dark_gray"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHeight_default="wrap"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/dislikeActionButton"
      app:layout_constraintWidth_default="wrap"
      tools:text="@string/app_name"
    />

  </android.support.constraint.ConstraintLayout>

</RelativeLayout>
