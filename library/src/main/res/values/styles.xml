<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="CardStyle">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginBottom">15dip</item>
    <item tools:targetApi="17" name="android:layout_marginEnd">20dip</item>
    <item name="android:layout_marginLeft">20dip</item>
    <item name="android:layout_marginRight">20dip</item>
    <item tools:targetApi="17" name="android:layout_marginStart">20dip</item>
    <item name="android:background">@drawable/white_card_background</item>
    <item tools:targetApi="21" name="android:elevation">2dip</item>
  </style>

  <style name="RateCardStyle" parent="CardStyle">
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="RatingBar" parent="Theme.AppCompat">
    <item name="colorControlNormal">@color/yellow_selected</item>
    <item name="colorControlActivated">@color/yellow_selected</item>
  </style>

</resources>